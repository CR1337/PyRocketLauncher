    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Master",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceRoot}/run.py",
            "env": {
                "FLASK_APP": "${workspaceRoot}/run.py",
                "FLASK_DEBUG": "1",
                "IS_MASTER": "1",
                "DEBUG": "1",
                "GATEWAY_IP": "192.168.0.1",
                "ON_PI": "0"
            },
            "args": [
                "run"
            ]
        },
        {
            "name": "Run Device",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceRoot}/run.py",
            "env": {
                "FLASK_APP": "${workspaceRoot}/run.py",
                "FLASK_DEBUG": "1",
                "IS_MASTER": "0",
                "DEBUG": "1",
                "GATEWAY_IP": "192.168.0.1",
                "ON_PI": "0"
            },
            "args": [
                "run"
            ]
        }
    ]
}